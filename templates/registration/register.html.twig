{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets %}{% endblock %}

{% block body %}
    {{ form_start(registrationForm) }}
		<section class="gradient-custom">
			<div class="container py-3 h-100">
				<div class="row d-flex justify-content-center align-items-center h-100">
					<div class="col-12 col-md-8 col-lg-6 col-xl-8">
						<div class="card bg-dark text-white mb-2 rounded-10">
							<div class="card-body p-5 text-center">
								<div>
									<h2 class="fw-bold mb-2 text-uppercase">Inscription</h2>

									<div class="form-outline form-white mb-4">
										{{ form_row(registrationForm.username, { 'label': 'Nom d\'utilisateur' }) }}
									</div>

									<div class="form-outline form-white mb-4">
										{{ form_row(registrationForm.firstname, { 'label': 'Prénom' }) }}
									</div>

									<div class="form-outline form-white mb-4">
										{{ form_row(registrationForm.lastname, { 'label': 'Nom de famille' }) }}
									</div>

									<div class="form-outline form-white mb-4">
										{{ form_row(registrationForm.email, { 'label': 'Adresse email' }) }}
									</div>

									<div class="form-outline form-white mb-4">
										{{ form_row(registrationForm.description, { 'label': 'À propos de vous' }) }}
									</div>

									<div class="form-outline form-white mb-4">
										{{ form_row(registrationForm.logo, { 'label': 'Photo' }) }}
									</div>

									<div class="form-outline form-white mb-4">
										{{ form_row(registrationForm.password, { 'label': 'Mot de passe' }) }}
									</div>

									<button class="btn btn-outline-light btn-lg px-5 mt-2" type="submit">Créer mon compte</button>

									<div class="d-flex justify-content-center text-center mt-2 pt-1">
										<a href="#!" class="text-white">
											<i class="fab fa-facebook-f fa-lg"></i>
										</a>
										<a href="#!" class="text-white">
											<i class="fab fa-twitter fa-lg mx-4 px-2"></i>
										</a>
										<a href="#!" class="text-white">
											<i class="fab fa-google fa-lg"></i>
										</a>
									</div>

									<p class="small pb-lg-2 text-white">
										<a class="text-primary" href="#!">Mot de passe oublié?</a>
									</p>
								</div>
								<div>
									<p class="mb-0 text-white">Déjà inscrit?
										<a href="{{ path('app_login') }}" class="text-primary fw-bold">
                                            <u>Connecte-toi</u>
                                        </a>
									</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
    {{ form_end(registrationForm) }}

{% endblock %}

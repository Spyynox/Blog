{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/authenticator/style.css') }}">
{% endblock %}

{% block body %}
    {{ form_start(registrationForm) }}
		<section class="gradient-custom">
			<div class="container py-3 h-100">
				<div class="row d-flex justify-content-center align-items-center h-100">
					<div class="col-12 col-md-8 col-lg-6 col-xl-8">
						<div class="card bg-dark text-white mb-2 rounded-10">
							<div class="card-body p-5 text-center">
								<div>
									<h2 class="fw-bold mb-2 text-uppercase">Sign Up</h2>

									<div class="form-outline form-white mb-4">
										{{ form_row(registrationForm.username) }}
									</div>

									<div class="form-outline form-white mb-4">
										{{ form_row(registrationForm.firstname) }}
									</div>

									<div class="form-outline form-white mb-4">
										{{ form_row(registrationForm.lastname) }}
									</div>

									<div class="form-outline form-white mb-4">
										{{ form_row(registrationForm.email) }}
									</div>

									<div class="form-outline form-white mb-4">
										{{ form_row(registrationForm.description) }}
									</div>

									<div class="form-outline form-white mb-4">
										{{ form_row(registrationForm.logo) }}
									</div>

									<div class="form-outline form-white mb-4">
										{{ form_row(registrationForm.plainPassword) }}
									</div>

                                    {{ form_row(registrationForm.agreeTerms) }}

									<button class="btn btn-outline-light btn-lg px-5 mt-2" type="submit">Register</button>

									<div class="d-flex justify-content-center text-center mt-2 pt-1">
										<a href="#!" class="text-white">
											<i class="fab fa-facebook-f fa-lg"></i>
										</a>
										<a href="#!" class="text-white">
											<i class="fab fa-twitter fa-lg mx-4 px-2"></i>
										</a>
										<a href="#!" class="text-white">
											<i class="fab fa-google fa-lg"></i>
										</a>
									</div>

									<p class="small pb-lg-2">
										<a class="text-white-50" href="#!">Forgot password?</a>
									</p>
								</div>
								<div>
									<p class="mb-0">Do you have an account?
										<a href="{{ path('app_login') }}" class="text-white-50 fw-bold">Sign In</a>
									</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
    {{ form_end(registrationForm) }}

{% endblock %}
